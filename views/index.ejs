<!DOCTYPE html>
<html>

<head>
    <title>Blog Sitesi</title>
    <link rel="stylesheet" href="/style.css">
</head>

<body>
    <div class="container">
        <h1>Blog Yazıları</h1>
        <a href="/post/new" class="button">Yeni Yazı Ekle</a>

        <div class="posts">
            <% posts.forEach(post=> { %>
                <div class="post-card">
                    <h2>
                        <%= post.title %>
                    </h2>
                    <p>
                        <%= new Date(post.date).toLocaleDateString() %>
                    </p>
                    <a href="/post/<%= post.id %>" class="button">Devamını Oku</a>
                </div>
                <% }); %>
        </div>
    </div>
</body>

</html>